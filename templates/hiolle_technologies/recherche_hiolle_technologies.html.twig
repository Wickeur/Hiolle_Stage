{% extends 'base.html.twig' %}

{% block title %}Hiolle Technologies - Recherche Avanc√©e{% endblock %}

{% block body %}
    {% include 'le_CSS/css_recherche_avancee.html.twig' %}

    <div class="recherche">
        {{ form_start(form) }}
        <h4>{{ form_row(form.utilisateur_h_tech) }}</h4>
        <button type="submit" class="btn btn-primary">Rechercher</button>
        {{ form_end(form) }}
    </div>

    <div class="contenu">
        {% for lesPC in LesOrdiHiolleTechnologies %}
            <h1><u>{{ lesPC.utilisateurHTech }}</u></h1>
            <div class="info">
                <div class="infoplus"><h3>Nom de station</h3>
                    {{ lesPC.nomStationHTech }}</div>
                <div class="infoplus"><h3>Marque</h3>
                    {{ lesPC.marqueStationHTech }}</div>
                <div class="infoplus"><h3>Adresse</h3>
                    {{ lesPC.adresseMacHTech }}</div>
                <div class="infoplus"><h3>TAG</h3>
                    {{ lesPC.tagHTech }}</div>
                <div class="infoplus"><h3>Microsoft</h3>
                    {{ lesPC.microsoftHTech }}</div>
                <div class="infoplus"><h3>Station d'acceuil</h3>
                    {{ lesPC.stationAcceuilHTech }}</div>
                <div class="infoplus"><h3>Moniteur</h3>
                    {{ lesPC.moniteurHTech }}</div>
                <div class="infoplus"><h3>Clavier + Souris</h3>
                    {{ lesPC.clavierSourisHTech }}</div>
            </div>
            <div class="lesBoutons">
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path("modif_hiolle_technologies", { id:lesPC.id}) }}" class="btn btn-dark">Modifier</a>
                    <a href="{{ path("sup_hiolle_technologies", { id:lesPC.id}) }}" class="btn btn-danger">Supprimer</a>
                {% endif %}
            </div>
        {% endfor %}
    </div>


{% endblock %}