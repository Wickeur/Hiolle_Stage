<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Bienvenue{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <style>
        body{
            background-attachment:fixed;
            background-image: url("../Image/ville_futur.jpg");
            background-size: cover;
            background-position: center;
        }



    </style>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="https://hiolle-industries.com"><img src="../Image/hiolle_industries.png" height="70px"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                {% if is_granted('ROLE_USER') %}
                    <a class="nav-item nav-link active" href="{{ path('liste') }}">Les données</a>
                    <a class="nav-item nav-link active" href="{{ path('nouveau_entrant') }}">Nouveaux entrants</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="nav-item nav-link active" href="{{ path('gestion_utilisateur') }}">Gestion des connexions</a>
                    {% endif %}
                {% else  %}
                    <a class="nav-item nav-link " href="{{ path('login') }}">Se Connecter</a>
                    <a class="nav-item nav-link " href="{{ path('register') }}">Créer un Compte</a>
                {% endif %}
            </div>
            {% if is_granted('ROLE_USER') %}
                <div class="nav navbar-nav navbar right">
                    <a class="nav-item nav-link " href="{{ path('app_logout') }}">Se Déconnecter</a>
                </div>
            {% endif %}

        </div>
    </nav>

        {% block body %}{% endblock %}
    </body>
</html>
