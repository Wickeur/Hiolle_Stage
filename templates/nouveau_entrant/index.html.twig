{% extends 'base.html.twig' %}

{% block title %}Les nouveaux entrants - Les données{% endblock %}

{% block body %}
    {% include 'le_CSS/css_affichage_principale.html.twig' %}
    <style>
        h1{
            background-color: white;
            position: relative;
            left: 35%;
            text-align: center;
            border: 1px solid #9a9b9c;
            border-radius: 0.5rem;
            padding: 1%;
            margin: 1%;
            color: black;
        }
        .lesBoutons{
            left: 44%;
        }
    </style>

    <div class="contenu">
        <h1>Liste des nouveaux entrants</h1>
        <div class="tableau">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Nom
                        <div class="btn-group">
                            <button type="button" class="btn dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="sr-only"></span>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{ path("trier_nom_nouv_asc")}}"><img src="../Image/flèche_bas.png" height=30px>Ordre croissant</a>
                                <a class="dropdown-item" href="{{ path("trier_nom_nouv_desc")}}"><img src="../Image/flèche_haut.png" height=30px>Ordre décroissant</a>
                            </div>
                        </div>
                    </th>
                    <th>Prenom
                        <div class="btn-group">
                            <button type="button" class="btn dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="sr-only"></span>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{ path("trier_prenom_nouv_asc")}}"><img src="../Image/flèche_bas.png" height=30px>Ordre croissant</a>
                                <a class="dropdown-item" href="{{ path("trier_prenom_nouv_desc")}}"><img src="../Image/flèche_haut.png" height=30px>Ordre décroissant</a>
                            </div>
                        </div>
                    </th>
                    <th>Société
                        <div class="btn-group">
                            <button type="button" class="btn dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="sr-only"></span>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{ path("trier_societe_nouv_asc")}}"><img src="../Image/flèche_bas.png" height=30px>Ordre croissant</a>
                                <a class="dropdown-item" href="{{ path("trier_societe_nouv_desc")}}"><img src="../Image/flèche_haut.png" height=30px>Ordre décroissant</a>
                            </div>
                        </div>
                    </th>
                    <th>Service
                        <div class="btn-group">
                            <button type="button" class="btn dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="sr-only"></span>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{ path("trier_service_nouv_asc")}}"><img src="../Image/flèche_bas.png" height=30px>Ordre croissant</a>
                                <a class="dropdown-item" href="{{ path("trier_service_nouv_desc")}}"><img src="../Image/flèche_haut.png" height=30px>Ordre décroissant</a>
                            </div>
                        </div>
                    </th>
                    <th>Matériel PC
                        <div class="btn-group">
                            <button type="button" class="btn dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="sr-only"></span>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{ path("trier_materiel_pc_nouv_asc")}}"><img src="../Image/flèche_bas.png" height=30px>Ordre croissant</a>
                                <a class="dropdown-item" href="{{ path("trier_materiel_pc_nouv_desc")}}"><img src="../Image/flèche_haut.png" height=30px>Ordre décroissant</a>
                            </div>
                        </div>
                    </th>
                    <th>Logiciel
                        <div class="btn-group">
                            <button type="button" class="btn dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="sr-only"></span>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{ path("trier_logiciel_nouv_asc")}}"><img src="../Image/flèche_bas.png" height=30px>Ordre croissant</a>
                                <a class="dropdown-item" href="{{ path("trier_logiciel_nouv_desc")}}"><img src="../Image/flèche_haut.png" height=30px>Ordre décroissant</a>
                            </div>
                        </div>
                    </th>
                    <th>Sacoche
                        <div class="btn-group">
                            <button type="button" class="btn dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="sr-only"></span>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{ path("trier_sacoche_nouv_asc")}}"><img src="../Image/flèche_bas.png" height=30px>Ordre croissant</a>
                                <a class="dropdown-item" href="{{ path("trier_sacoche_nouv_desc")}}"><img src="../Image/flèche_haut.png" height=30px>Ordre décroissant</a>
                            </div>
                        </div>
                    </th>
                    <th>Accès réseau
                        <div class="btn-group">
                            <button type="button" class="btn dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="sr-only"></span>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{ path("trier_acces_reseau_nouv_asc")}}"><img src="../Image/flèche_bas.png" height=30px>Ordre croissant</a>
                                <a class="dropdown-item" href="{{ path("trier_acces_reseau_nouv_desc")}}"><img src="../Image/flèche_haut.png" height=30px>Ordre décroissant</a>
                            </div>
                        </div>
                    </th>
                    <th>Adresse mail
                        <div class="btn-group">
                            <button type="button" class="btn dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="sr-only"></span>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{ path("trier_adresse_nouv_asc")}}"><img src="../Image/flèche_bas.png" height=30px>Ordre croissant</a>
                                <a class="dropdown-item" href="{{ path("trier_adresse_nouv_desc")}}"><img src="../Image/flèche_haut.png" height=30px>Ordre décroissant</a>
                            </div>
                        </div>
                    </th>
                    <th>Autre demande ?
                        <div class="btn-group">
                            <button type="button" class="btn dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="sr-only"></span>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{ path("trier_autre_demande_nouv_asc")}}"><img src="../Image/flèche_bas.png" height=30px>Ordre croissant</a>
                                <a class="dropdown-item" href="{{ path("trier_autre_demande_nouv_desc")}}"><img src="../Image/flèche_haut.png" height=30px>Ordre décroissant</a>
                            </div>
                        </div>
                    </th>
                    <th>Date d'arrivée
                        <div class="btn-group">
                            <button type="button" class="btn dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="sr-only"></span>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{ path("trier_date_arrivee_asc")}}"><img src="../Image/flèche_bas.png" height=30px>Ordre croissant</a>
                                <a class="dropdown-item" href="{{ path("trier_date_arrivee_desc")}}"><img src="../Image/flèche_haut.png" height=30px>Ordre décroissant</a>
                            </div>
                        </div>
                    </th>
                    <th></th>
                    {% if is_granted('ROLE_ADMIN') %}
                        <th></th>
                    {% endif %}
                </tr>
                </thead>
                <!--La liste-->
                <tbody>
                {% for NV in NouveauEntrant %}
                    <tr>
                        <td>{{ NV.nomNouv }}</td>
                        <td>{{ NV.prenomNouv }}</td>
                        <td>{{ NV.societeNouv }}</td>
                        <td>{{ NV.serviceNouv }}</td>
                        <td>{{ NV.materielPcNouv }}</td>
                        <td>{{ NV.logicielNouv }}</td>
                        <td>{{ NV.sacocheNouv }}</td>
                        <td>{{ NV.accesReseauNouv }}</td>
                        <td>{{ NV.adresseNouv }}</td>
                        <td>{{ NV.autreDemandeNouv }}</td>
                        <td>{{ NV.dateArrivee }}</td>
                        <td><a href="{{ path("fiche_personne", { id:NV.id}) }}" class="btn btn-success">Fiche</a></td>
                        {% if is_granted('ROLE_ADMIN') %}
                            <td><a href="{{ path("modif_nouveau", { id:NV.id}) }}" class="btn btn-dark" style="margin-bottom: 1%">Modifier</a>
                            <a href="{{ path("sup_nouv", { id:NV.id}) }}" class="btn btn-danger">Supprimer</a></td>
                        {% endif %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="lesBoutons">
            {% if is_granted('ROLE_ADMIN') %}
                <a href="#bar_ajout" class="btn btn-success" data-bs-toggle="offcanvas" role="button" aria-controls="sidebar">Ajouter un nouvel entrant</a>
            {% endif %}
        </div>
    </div>

<div class="offcanvas offcanvas-start" tabindex="-1" id="bar_ajout" aria-labelledby="sidebar-label">
    <div class="offcanvas-header">
        <h2 class="offcanvas-title" id="sidebar-label">Ajout d'une personne</h2>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="formulaire">
        <div class="row">
            <form action="" method="POST">
                <div class="mb-3">
                    <label for="nom_nouv" class="form-label">Quel est son nom ?</label>
                    <input type="text" class="form-control" id="nom_nouv" name="nom_nouv">
                </div>
                <div class="mb-3">
                    <label for="prenom_nouv" class="form-label">Quel est son prenom ?</label>
                    <input type="text" class="form-control" id="prenom_nouv" name="prenom_nouv">
                </div>
                <div class="mb-3">
                    A quelle société appartient-il/elle ?<br>
                    <input type="radio" name="societe_nouv" value="Hiolle Industries"
                           id="h_i" checked/>
                    <label for="h_i">Hiolle Insdutries</label>
                    <input type="radio" name="societe_nouv" value="Hiolle Technologie"
                           id="h_t" />
                    <label for="h_t">Hiolle Technologie</label>
                    <input type="radio" name="societe_nouv" value="Amodiag"
                           id="Amodiag" />
                    <label for="Amodiag">Amodiag</label>
                    <input type="radio" name="societe_nouv" value="Graff"
                           id="Graff" />
                    <label for="Graff">Graff</label>
                </div>
                <div class="mb-3">
                    <label for="service_nouv" class="form-label">Le nom de son service</label>
                    <input  type="text" class="form-control" id="service_nouv" name="service_nouv">
                </div>
                <div class="mb-3">
                    A t'il/elle besoin de matériel pour PC ?<br>
                    <input  type="radio" name="materiel_pc_nouv" value="Oui"
                           id="Oui" checked/>
                    <label for="Oui">Oui</label>
                    <input type="radio" name="materiel_pc_nouv" value="Non"
                           id="Non" />
                    <label for="Non">Non</label>
                </div>
                <div class="mb-3">
                    A t'il/elle besoin d'un logiciel ?<br>
                    <input required type="radio" name="logiciel_nouv" value="Oui"
                           id="Oui"/>
                    <label for="Oui">Oui</label>
                    <input type="radio" name="logiciel_nouv" value="Non"
                           id="Non" />
                    <label for="Non">Non</label>
                </div>
                <div class="mb-3">
                    A t'il/elle besoin d'une sacoche ?<br>
                    <input required type="radio" name="sacoche_nouv" value="Oui"
                           id="Oui"/>
                    <label for="Oui">Oui</label>
                    <input type="radio" name="sacoche_nouv" value="Non"
                           id="Non" />
                    <label for="Non">Non</label>
                </div>
                <div class="mb-3">
                    <label for="acces_reseau_nouv" class="form-label">A t'il/elle besoin un accès réseau ?</label>
                    <input type="text" class="form-control" id="acces_reseau_nouv" name="acces_reseau_nouv" placeholder="Oui/Non (si oui, préciser)">
                </div>
                <div class="mb-3">
                    <label for="adresse_nouv" class="form-label">A t'il/elle besoin d'une adresse mail ?</label>
                    <input type="text" class="form-control" id="adresse_nouv" name="adresse_nouv" placeholder="Oui/Non (si oui, préciser)">
                </div>
                <div class="mb-3">
                    <label for="autre_demande_nouv" class="form-label">Autre demande ?</label>
                    <input type="text" class="form-control" id="autre_demande_nouv" name="autre_demande_nouv">
                </div>
                <div class="mb-3">
                    <label for="date_arrivee" class="form-label">Sa date d'arrivée</label>
                    <input type="date" class="form-control" id="date_arrivee" name="date_arrivee">
                </div>

                <!--Bouton pour valider-->
                <input type="submit" class="btn btn-primary">
            </form>
        </div>
    </div>
</div>

{% endblock %}
